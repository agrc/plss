{
  "name": "@ugrc/plss-app",
  "description": "A React app for the UGRC PLSS",
  "type": "module",
  "private": true,
  "version": "3.5.15",
  "license": "MIT",
  "author": "UGRC",
  "main": "./src/functions/index.mjs",
  "engines": {
    "node": "20"
  },
  "scripts": {
    "cm": "cz",
    "copy:arcgis": "cpy \"./node_modules/@arcgis/core/assets/**\" ./public/assets",
    "dev": "cross-env NODE_ENV=development run-p dev:*",
    "dev:firebase": "cross-env NODE_ENV=development firebase emulators:start --import .emulator-data --only auth,functions,firestore,storage",
    "save-firebase-state": "cross-env NODE_ENV=development firebase emulators:start --import .emulator-data --export-on-exit --only auth,functions,firestore,storage",
    "dev:vite": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint ./ --ext .js,.mjs,.jsx --ignore-path ./.eslintignore",
    "lint:fix": "eslint ./ --ext .js,.mjs,.jsx --quiet --fix --ignore-path ./.eslintignore",
    "format": "prettier \"src/**/*.{js,jsx,ts,json,mjs,md,mdx}\" --write",
    "prepare": "husky",
    "fb:serve": "cross-env NODE_ENV=development firebase emulators:start --only functions",
    "fb:deploy": "firebase deploy --only functions",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "start": "npm run dev",
    "test": "vitest --silent --coverage --ui --open",
    "test:ci": "firebase emulators:exec --only storage 'FIREBASE_STORAGE_EMULATOR_HOST=127.0.0.1:9199 npm run test'",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@arcgis/core": "^4.31.6",
    "@headlessui/react": "^2.2.0",
    "@heroicons/react": "^2.2.0",
    "@hookform/error-message": "^2.0.1",
    "@hookform/resolvers": "^3.9.1",
    "@react-hook/window-size": "^3.1.1",
    "@tanstack/react-query": "^5.62.11",
    "@tanstack/react-query-devtools": "^5.62.11",
    "@ugrc/layer-selector": "^6.2.11",
    "@ugrc/utilities": "^2.4.3",
    "@xstate/react": "^4.1.3",
    "camelcase": "^8.0.0",
    "clsx": "^2.1.1",
    "contrast-color": "^1.0.1",
    "cors": "^2.8.5",
    "dms-conversion": "^3.1.3",
    "firebase": "^9.23.0",
    "if-env": "^1.0.4",
    "immer": "^10.1.1",
    "ky": "^1.7.4",
    "md5": "^2.3.0",
    "natural-compare-lite": "^1.4.0",
    "react": "^18.3.1",
    "react-color": "^2.19.3",
    "react-dom": "^18.3.1",
    "react-error-boundary": "^4.0.13",
    "react-hook-form": "^7.54.2",
    "reactfire": "^4.2.3",
    "use-immer": "^0.11.0",
    "xstate": "^5.19.1",
    "yup": "^1.6.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@firebase/rules-unit-testing": "^2.0.7",
    "@hookform/devtools": "^4.3.3",
    "@storybook/addon-actions": "^8.4.7",
    "@storybook/addon-essentials": "^8.4.7",
    "@storybook/addon-interactions": "^8.4.7",
    "@storybook/addon-links": "^8.4.7",
    "@storybook/react-vite": "^8.4.7",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react-swc": "^3.7.2",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.2",
    "autoprefixer": "^10.4.20",
    "commitizen": "^4.3.1",
    "cpy-cli": "^5.0.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.16",
    "firebase-functions-test": "^3.4.0",
    "firebase-tools": "^13.29.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "storybook": "^8.3.5",
    "tailwindcss": "^3.4.17",
    "vite": "^5.4.8",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-package-version": "^1.1.0",
    "vitest": "^2.1.2"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react/jsx-runtime",
      "plugin:react-hooks/recommended",
      "plugin:jsx-a11y/recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "react",
      "prettier",
      "jsx-a11y",
      "react-hooks",
      "react-refresh"
    ],
    "rules": {
      "react-refresh/only-export-components": "warn"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "prettier": {
    "singleQuote": true,
    "semi": true
  },
  "browserslist": {
    "production": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,mjs}": "eslint --cache --fix",
    "*.{md,yml,yaml,json}": "prettier --write"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
