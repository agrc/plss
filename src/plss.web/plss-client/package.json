{
  "name": "plss-client",
  "version": "0.1.0",
  "private": true,
  "homepage": ".",
  "dependencies": {
    "@agrc/layer-selector": "^4.0.2",
    "@arcgis/core": "^4.18.0-next.20201109",
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/react": "^11.1.1",
    "@testing-library/user-event": "^12.2.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.0",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "postinstall": "cp -R ./node_modules/@arcgis/core/assets ./public/assets",
    "start": "rimraf ./build && env-cmd -e development react-scripts start",
    "build": "npm run build:css && env-cmd -e development react-scripts build",
    "build:stage": "npm run build:purge-css && env-cmd -e staging react-scripts build",
    "build:css": "tailwind build src/styles/tailwind.css -o src/index.css",
    "build:purge-css": "NODE_ENV=production tailwind build src/styles/tailwind.css -o src/index.css",
    "test": "react-scripts test",
    "lint": "eslint ./src/",
    "deploy:stage": "npm run build:stage && wonkavision clean && wonkavision zip && env-cmd -e staging wonkavision ship ./deploy/deploy.zip wwwroot/plss && env-cmd -e staging wonkavision unzip wwwroot/plss",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^3.0.0",
    "autoprefixer": "^10.0.1",
    "env-cmd": "^10.1.0",
    "eslint": "^7.13.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "postcss": "^8.1.6",
    "postcss-cli": "^8.2.0",
    "purgecss": "^3.0.0",
    "rimraf": "^3.0.2",
    "tailwindcss": "^1.9.6",
    "wonkavision": "file:../../../../wonkavision"
  }
}
