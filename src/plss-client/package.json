{
  "name": "plss-client",
  "version": "0.1.0",
  "private": true,
  "homepage": ".",
  "dependencies": {
    "@agrc/layer-selector": "^4.0.4",
    "@arcgis/core": "^4.18.1",
    "@fortawesome/fontawesome-svg-core": "^1.2.34",
    "@fortawesome/free-solid-svg-icons": "^5.15.2",
    "@fortawesome/react-fontawesome": "^0.1.14",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@testing-library/user-event": "^12.6.3",
    "clsx": "^1.1.1",
    "eslint-config-prettier": "^7.2.0",
    "react": "^17.0.1",
    "react-color": "^2.19.3",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.2",
    "react-tabs": "^3.2.0",
    "use-immer": "^0.4.2",
    "web-vitals": "^1.1.0"
  },
  "scripts": {
    "build-react:stage": "npm run build:purge-css && env-cmd --environments staging react-scripts build",
    "build:css": "tailwind build src/styles/tailwind.css -o src/index.css",
    "build:purge-css": "NODE_ENV=production tailwind build src/styles/tailwind.css -o src/index.css",
    "build:stage": "env-cmd --environments staging dotnet publish ../plss.web.csproj -c Release -r win10-x64 --self-contained false && npm run copy:build",
    "build": "npm run build:css && env-cmd --environments development react-scripts build",
    "copy:arcgis": "npm run copy:public && npm run copy:build",
    "copy:build": "ncp ./node_modules/@arcgis/core/assets ../bin/Release/net5.0/win10-x64/publish/plss-client/build/assets",
    "copy:public": "ncp ./node_modules/@arcgis/core/assets ./public/assets",
    "deploy:stage": "npm run build:stage && wonkavision clean && wonkavision zip && env-cmd --environments staging wonkavision ship ./deploy/deploy.zip wwwroot/plss && env-cmd -e staging wonkavision unzip wwwroot/plss",
    "eject": "react-scripts eject",
    "format": "prettier --write src --ignore-path ./.gitignore",
    "lint": "eslint ./src/",
    "start:all": "env-cmd --environments development dotnet run -p ../plss.web.csproj",
    "start": "env-cmd --environments development react-scripts start",
    "test": "react-scripts test",
    "wonkavise:clean": "wonkavision clean ./build ./../bin ./../../deploy",
    "wonkavise:extract": "env-cmd --environments staging wonkavision unzip plss deploy.zip --extra-command \"rm app_offline.htm\"",
    "wonkavise:ship": "env-cmd --environments staging wonkavision ship ./../../deploy/deploy.zip plss && env-cmd --environments staging wonkavision ship ../app_offline.htm plss",
    "wonkavise:zip": "wonkavision zip ../bin/Release/net5.0/win10-x64/publish ./../../deploy deploy.zip",
    "wonkavise": "npm run wonkavise:clean && npm run build:stage && npm run wonkavise:zip && npm run wonkavise:ship && npm run wonkavise:extract"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "prettier"
    ]
  },
  "browserslist": {
    "production": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120
  },
  "devDependencies": {
    "@agrc/wonkavision": "^1.0.2",
    "@fullhuman/postcss-purgecss": "^4.0.0",
    "autoprefixer": "^10.2.4",
    "env-cmd": "^10.1.0",
    "eslint": "^7.19.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "ncp": "^2.0.0",
    "postcss": "^8.2.5",
    "postcss-cli": "^8.3.1",
    "prettier": "^2.2.1",
    "purgecss": "^4.0.0",
    "rimraf": "^3.0.2",
    "tailwindcss": "^2.0.3"
  }
}
